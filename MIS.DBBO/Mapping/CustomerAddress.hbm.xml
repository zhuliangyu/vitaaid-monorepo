<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="MIS.DBBO" namespace="MIS.DBBO" xmlns="urn:nhibernate-mapping-2.2">
  <typedef name="TrimString" class="MyHibernateUtil.TrimString, MyHibernateUtil"/>
  <class name="CustomerAddress" table="CustomerAddress" lazy="true" >
    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
    <many-to-one name="oCustomer">
      <column name="oCustomer" sql-type="int" not-null="false" />
    </many-to-one>
    
    <property name="CustomerCode" type ="TrimString">
      <column name="CustomerCode" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="CustomerName" type ="TrimString">
      <column name="CustomerName" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="DefaultShippingAddress">
      <column name="DefaultShippingAddress" sql-type="int" not-null="false" />
    </property>
    <property name="DefaultBillingAddress">
      <column name="DefaultBillingAddress" sql-type="int" not-null="false" />
    </property>
    <property name="AddressPerson" type ="TrimString">
      <column name="AddressPerson" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="AddressName" type ="TrimString">
      <column name="AddressName" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="Address" type ="TrimString">
      <column name="Address" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="City" type ="TrimString">
      <column name="City" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="Province" type ="TrimString">
      <column name="Province" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="PostalCode" type ="TrimString">
      <column name="PostalCode" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="Country" type ="TrimString">
      <column name="Country" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="Tel" type ="TrimString">
      <column name="Tel" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="Fax" type ="TrimString">
      <column name="Fax" sql-type="nvarchar" not-null="false" />
    </property>

    <!-- Other -->
    <property name="DataStatus" type ="TrimString">
      <column name="DataStatus" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="Comment" type ="TrimString">
      <column name="Comment" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="CreatedID" type ="TrimString">
      <column name="CreatedID" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="CreatedDate">
      <column name="CreatedDate" sql-type="DATETIME2" not-null="false" />
    </property>
    <property name="UpdatedID" type ="TrimString">
      <column name="UpdatedID" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="UpdatedDate">
      <column name="UpdatedDate" sql-type="DATETIME2" not-null="false" />
    </property>
  </class>
</hibernate-mapping>