<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="POCO" namespace="POCO" xmlns="urn:nhibernate-mapping-2.2">
  <class name="FabFormulation" table="FabFormulation" lazy="false" >
    <id name="ID" column="ID">
      <generator class="identity" />
    </id>

    <component name="Items"  class="MySystem.Base.NSeqList`1[FabFormulationItem], MySystem.Base">
      <bag name="innerList" table="FabFormulationItem" lazy="true" cascade="delete"  order-by="Sequence">
        <key column="FormulationID" />
        <one-to-many class="FabFormulationItem" />
      </bag>
    </component>
    <component name="RawMaterialReqItems"  class="MySystem.Base.NSeqList`1[FabRawMaterialReq], MySystem.Base">
      <bag name="innerList" table="FabRawMaterialReq" lazy="true" cascade="all"  order-by="Sequence">
        <key column="FormulationID" />
        <one-to-many class="FabRawMaterialReq" />
      </bag>      
    </component>
    <property name="FormulationCode" type ="TrimString">
      <column name="FormulationCode" sql-type="nvarchar" not-null="false" />
    </property>
  </class>
</hibernate-mapping>