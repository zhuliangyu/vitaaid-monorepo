<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="POCO" namespace="POCO" xmlns="urn:nhibernate-mapping-2.2">
  <class name="SPCItem" table="SPCItem" lazy="true" >
    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
    <property name="Sequence">
      <column name="Sequence" sql-type="int" not-null="true" />
    </property>
    <property name="Name" type ="TrimString">
      <column name="Name" sql-type="nvarchar" not-null="false" />
    </property>

    <property name="ValueType" type="eVALUETYPE">
      <column name="ValueType" sql-type="int" not-null="false" />
    </property>

    <many-to-one name="Unit">
      <column name="Unit" sql-type="int" not-null="false" />
    </many-to-one>
    <many-to-one name="ComputedBySPC">
      <column name="ComputedBySPCID" sql-type="int" not-null="false" />
    </many-to-one>
    <property name="ComputedBySPCItems" type ="TrimString">
      <column name="ComputedBySPCItems" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="ValueOperation" type ="TrimString">
      <column name="ValueOperation" sql-type="nvarchar" not-null="false" />
    </property>
  </class>
</hibernate-mapping>