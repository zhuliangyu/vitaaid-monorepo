<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="POCO" namespace="POCO" xmlns="urn:nhibernate-mapping-2.2">
  <class name="FabRawMaterialReq" table="FabRawMaterialReq" lazy="true" >
    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
    <property name="Sequence">
      <column name="Sequence" sql-type="int" not-null="true" />
    </property>
    <many-to-one name="Formulation">
      <column name="FormulationID" sql-type="int" not-null="false" />
    </many-to-one>
    <many-to-one name="FormulationItem">
      <column name="FabFormulationItemID" sql-type="int" not-null="false" />
    </many-to-one>
    <property name="SpecCode" type ="TrimString">
      <column name="SpecCode" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="ReceivingNo" type ="TrimString">
      <column name="ReceivingNo" sql-type="nvarchar" not-null="false" />
    </property>
    <many-to-one name="Supplier">
      <column name="Supplier" sql-type="int" not-null="false" />
    </many-to-one>
    <many-to-one name="SpecDetailOfRawMaterial">
      <column name="SpecDetailIDOfRawMaterial" sql-type="int" not-null="false" />
    </many-to-one>
    <property name="ReqWeight">
      <column name="ReqWeight" sql-type="float" not-null="false" />
    </property>
    <property name="ApplyWeight">
      <column name="ApplyWeight" sql-type="float" not-null="false" />
    </property>
    <many-to-one name="WeightUnit">
      <column name="WeightUnit" sql-type="int" not-null="false" />
    </many-to-one>
    <property name="CreatedDate">
      <column name="CreatedDate" sql-type="smalldatetime" not-null="false" />
    </property>
    <property name="Status" type ="eRMREQSTATUS">
      <column name="Status" sql-type="int" not-null="false" />
    </property>
    <bag name="RMApplyList" table="FabRawMaterialApply" lazy="true" cascade="all">
      <key column="FabRawMaterialReqID" />
      <one-to-many class="FabRawMaterialApply" />
    </bag>
    <!--<property name="LotID">
      <column name="LotID" sql-type="int" not-null="false" />
    </property>-->
	  <many-to-one name="oLot">
		  <column name="LotID" sql-type="int" not-null="false" />
	  </many-to-one>
	  <property name="UpdatedDate">
      <column name="UpdatedDate" sql-type="smalldatetime" not-null="false" />
    </property>
    <property name="RMName" type ="TrimString">
      <column name="RMName" sql-type="nvarchar" not-null="false" />
    </property>
    <property name="Addenda">
      <column name="Addenda" sql-type="int" not-null="false" />
    </property>
    <property name="SpecRatio">
      <column name="SpecRatio" sql-type="float" not-null="false" />
    </property>
	  <property name="Comment" type ="TrimString">
		  <column name="Comment" sql-type="nvarchar" not-null="false" />
	  </property>
	  <property name="CreatedID" type ="TrimString">
		  <column name="CreatedID" sql-type="nvarchar" not-null="false" />
	  </property>
	  <property name="UpdatedID" type ="TrimString">
		  <column name="UpdatedID" sql-type="nvarchar" not-null="false" />
	  </property>
	  <property name="DataStatus" type ="TrimString">
		  <column name="DataStatus" sql-type="nvarchar" not-null="false" />
	  </property>
  </class>
</hibernate-mapping>