<UserControl x:Class="MyToolkit.Base.ReportViewerCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:reports="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             xmlns:local="clr-namespace:MyToolkit.Base"
             mc:Ignorable="d"             
             d:DesignHeight="768" d:DesignWidth="1024">
    <WindowsFormsHost>
        <reports:ReportViewer x:Name="reportViewer" ProcessingMode="Local"/>
    </WindowsFormsHost>
</UserControl>
