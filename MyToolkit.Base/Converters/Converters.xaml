<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:MyToolkit.Base"
  xmlns:Converters="clr-namespace:MyToolkit.Base.Converters">

  <Converters:RowNumberConverter x:Key="cvRowNumber"/>
  <Converters:BooleanToVisibilityConverter  x:Key="cvFalseToVisible" 
                True="Collapsed" 
                False="Visible" />
  <Converters:ValEqualToConverter x:Key="cvValEqualTo"/>
  <Converters:GreaterThanZeroConverter x:Key="cvGTZeroConverter"/>

</ResourceDictionary>
