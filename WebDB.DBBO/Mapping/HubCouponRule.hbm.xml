<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="WebDB.DBBO" namespace="WebDB.DBBO" xmlns="urn:nhibernate-mapping-2.2">
	<typedef name="TrimString" class="MyHibernateUtil.TrimString, MyHibernateUtil"/>
	<class name="HubCouponRule" table="hub_coupon_rule" lazy="true" >
		<id name="ID" column="rule_id">
			<generator class="identity" />
		</id>
		<many-to-one name="oCoupon" class="HubCoupon">
			<column name="coupon_id" sql-type="int" not-null="true" />
		</many-to-one>
		<property name="RuleType" type="TrimString">
			<column name="rule_type" sql-type="varchar(50)" not-null="true" />
		</property>
		<property name="RuleDetails" type="TrimString">
			<column name="rule_details" sql-type="nvarchar(max)" not-null="false" />
		</property>
		<property name="CreatedAt">
			<column name="created_at" sql-type="datetime" not-null="true" />
		</property>
		<property name="UpdatedAt">
			<column name="updated_at" sql-type="datetime" not-null="true" />
		</property>
	</class>
</hibernate-mapping>

